<?xml version="1.0" encoding="utf-8"?>
<!--  PROGIOS PETRIANOS -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas. android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".menuFragmentFirabse">

    <!-- FiraBase Menu Fragment -->

    <TextView
        android:id="@+id/ClientsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="60dp"
        android:text="Clients"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ClientInsertBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/lightblue"
        android:text="Insert"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClientsTextView" />

    <Button
        android:id="@+id/ClientDeleteBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/lightblue"
        android:text="DELETE"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/ClientInsertBN"
        app:layout_constraintTop_toBottomOf="@+id/ClientsTextView" />

    <Button
        android:id="@+id/ClientUpdateBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/lightblue"
        android:text="UPDATE"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/ClientDeleteBN"
        app:layout_constraintTop_toBottomOf="@+id/ClientsTextView" />

    <Button
        android:id="@+id/QueryFirabaseBN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/lightblue"
        android:text="ΥΠΟΒΟΛΗ"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClientUpdateBN" />

    <Button
        android:id="@+id/QueryFirabaseBN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/lightblue"
        android:text="ΥΠΟΒΟΛΗ"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QueryFirabaseBN1" />

    <Button
        android:id="@+id/QueryFirabaseBN3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="@color/lightblue"
        android:text="ΥΠΟΒΟΛΗ"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QueryFirabaseBN2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="177dp"
        android:layout_height="31dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="60dp"
        android:text="Εμφάνισε τους 4 νεότερους clients"
        app:layout_constraintEnd_toStartOf="@+id/QueryFirabaseBN1"
        app:layout_constraintTop_toBottomOf="@+id/ClientInsertBN" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="174dp"
        android:layout_height="29dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="64dp"
        android:text="Εμφάνισε τον client με id4001"
        app:layout_constraintEnd_toStartOf="@+id/QueryFirabaseBN2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="56dp"
        android:text="Εμφάνισε όλους τους clients"
        app:layout_constraintEnd_toStartOf="@+id/QueryFirabaseBN3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>